<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:text="Encryption Key "
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_encryption_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Encryption Key Must be greater than 24 "
            android:text="TechEaseTechEaseTechEase" />


        <EditText
            android:id="@+id/et_text_to_encrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entet text"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/btn_encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Encrypt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:text="Encrypted Out put"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_encryption_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="encryption"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingRight="5sp"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="15sp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:text="Decryption"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_encrypted_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter encrypted text" />

        <Button
            android:id="@+id/btn_decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Decrypt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:layout_marginTop="15sp"
            android:text="Decrypted Out put"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_decrypted_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="decryption"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingRight="5sp"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>